    <link rel="stylesheet" href="/css/styles-login.css">
    <title>Ingresa tu cuenta</title>
</head>
<body>    
    <!-- INCLUDE HEADER -->
    <%- include('../partials/header')  %>

    <main>        
        <form class="formLogin" action="/">
           <div class="form">
               <h1>Inicía Sesión</h1>           

                <div class="grupo">
                    <label>Usuario</label>
                    <input type="text" class="usuario" name="usuario">
                </div>    

                <div class="grupo">
                    <label>Password</label>
                    <input type="password" class="usuario" name="usuario">
                </div>   

                <button class="">Iniciar sesion</button>
         
            </div>
            <p>No tienes una cuenta? <a href="/user/register">Registrate aqui</a></p>
        </form>
    
    </main>

    <!-- INCLUDE FOOTER -->
    <%- include('../partials/footer')  %>
</body>
